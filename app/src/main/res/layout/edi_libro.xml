<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Título:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="14sp"
        tools:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="..."
        android:ems="10"
        android:id="@+id/tx_titulo" />

    <TextView
        android:text="Autor:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="14sp"
        tools:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="..."
        android:ems="10"
        android:id="@+id/tx_autor" />

    <TextView
        android:text="Editorial:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="14sp"
        tools:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="..."
        android:ems="10"
        android:id="@+id/tx_editorial" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <TextView
            android:text="ISBN:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="0.40"
            android:textSize="14sp"
            tools:textColor="@android:color/black" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="..."
            android:ems="10"
            android:id="@+id/tx_isbn"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <TextView
            android:text="Páginas:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="0.48"
            android:textSize="14sp"
            tools:textColor="@android:color/black" />

        <EditText
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="..."
            android:ems="10"
            android:id="@+id/tx_paginas"
            android:layout_weight="0.27" />

        <TextView
            android:text="Año:"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="14sp"
            tools:textColor="@android:color/black" />

        <EditText
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="..."
            android:ems="10"
            android:id="@+id/tx_anio" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <CheckBox
            android:text="eBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ch_ebook"
            android:layout_weight="1" />

        <CheckBox
            android:text="Leído"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ch_leido"
            android:layout_weight="1" />
    </LinearLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:id="@+id/rb_nota"
        style="@style/Widget.AppCompat.RatingBar"
        android:numStars="5"
        android:rating="2" />

    <TextView
        android:text="Resumen:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="14sp"
        tools:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="..."
        android:ems="10"
        android:id="@+id/tx_resumen" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1" />

        <Button
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
